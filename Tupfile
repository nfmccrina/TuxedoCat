include_rules

cpp_files=$(SRCDIR)/LookupData.cpp $(SRCDIR)/Bitboard.cpp $(SRCDIR)/Square.cpp $(SRCDIR)/Main.cpp $(TESTDIR)/*.cpp $(SRCDIR)/Rank.cpp $(SRCDIR)/Color.cpp $(SRCDIR)/Piece.cpp

GTESTDIR=googletest/src

: foreach $(cpp_files) |> $(CC) $(CXXFLAGS) $(INCLUDES) -c %f -o %o |> $(BUILDDIR)/%B.o

: $(BUILDDIR)/*.o $(GTESTDIR)/libgtest.a |> $(CC) %f $(LDFLAGS) -pthread $(LIBS) -o %o |> $(BUILDDIR)/tuxedocat
